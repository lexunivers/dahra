{% extends "layout.html.twig" %}
{% form_theme formVol 'bootstrap_4_layout.html.twig' %}	

{% block bodycreate %}

{{ form_start(formVol) }}
		<meta charset="utf-8">
    <head>
		<meta charset="utf-8">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
		
    </head>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
		<link href="{{ asset('css/layout.css') }}" rel='stylesheet' />	
        {% endblock %}

	<div class="container-fluid">

		{#<div class="container">#}
	</br>
			  <div class="row">
					<div class="col-8">
						<h6>Compte de : {{app.user}} {{app.user.lastname}}</h6>	  
						<h6>N° Pilote : {{app.user.id}} </h6>					
						<h6>N°Comptable : {{app.user.comptepilote.id}}</h6>				
					</div>
					
					
					<div class="col-4">
												{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
												<h6>Connecté en tant que: {{ app.user.username }}</h6> 

												<a button class="btn btn-outline-primary" role="button" href="{{ path('app_logout') }}">Déconnexion</a>
												{% else %}

												{% endif %}				
					</div>
				</div>	

				<div class="row">
						<div class="col-4">
							<div class="card bg-secondary text-white">
								<div class="card-body"><h5>Enregistrement d'un Vol</h5></div>
							</div>
						</div>

				</div>						
				
<br />
				<div class="row">
						<div class="col-12">
								<div class="card bg-info text-white text-left">
								<span class="bold">Attention ! Vous faites un circuit ? Ex: Marseille->Aix Les Milles->Avignon->Marseille, il y a 3 vols à enregistrer</span>
								</div> 
						</div>
				</div>			
						

			<div class="row">

				<div class="col-sm-4">

						<div class="form-group" id="user">
								<div class="col-sm-9">
									<div><strong>{{ form_row(formVol.user, {'label' : 'Pilote', 'attr' : { 'class' : 'user' }}) }}</strong></div>
								</div>
						</div>

						<div class="form-group" id="datevol" >
							<div class="col-sm-9">
								<div><strong> {{ form_row(formVol.datevol,  {'label' : 'Date du Vol', 'attr' : { 'class' : 'datepicker' }}) }}</strong></div>
							</div>			
						</div>

						<div class="form-group" id="CodeReservation">
							<div class="col-sm-9">

									<div><strong>{{ form_row(formVol.CodeReservation, {'label' : 'Votre Code de Réservation', 'attr' : { 'class' : 'reservation' }}) }}</strong></div>

							</div>
						</div>	
				</div>

				<div class="col-sm-4">
						<div class="form-group" id="avion">
							<div class="col-sm-8">
									<div><strong>{{ form_row(formVol.avion) }}</strong></div>
							</div>
						</div>
							
						<div class="form-group" id="typevol">
							<div class="col-sm-8">			
								<div><strong>{{ form_row(formVol.typevol, {'label' : 'Type de Vol', 'attr' : { 'class' : 'vol' } }) }}</strong></div>
							</div>		
						</div>
							
						<div class="form-group" id="instructeur">
							<div class="col-sm-8">			
								<div><strong>{{ form_row(formVol.instructeur) }}</strong></div>
							</div>
						</div>
						
						
							
						<div class="form-group" id="naturevol">
							<div class="col-sm-8">			
								<div><strong>{{ form_row(formVol.naturevol, {'label' : 'Nature du Vol', 'attr' : { 'class' : 'vol' }}) }}</strong></div>
							</div>
						</div>
					
				</div>	

					
				<div class="col-sm-4">
						<div class="form-group" id="lieuDepart">  
							<div class="col-sm-12">
								<div><strong>{{ form_row(formVol.lieuDepart, {'label' : 'Départ de:', 'attr' : { 'class' : 'vol' }}) }}</strong></div>
	


								<p class="text-danger">Formule Rapide. 1 seule case à cocher</p>

									 <div class="form-check-inline">
									  <label class="form-check-label" for="App_entity_vol_lieuDepart">
										<input type="checkbox" class="form-check-input" id="App_entity_vol_lieuDepart" name="App_entity_vol[lieuDepart]" value="270">Marseille
									  </label>
									</div>
									<div class="form-check-inline">
									  <label class="form-check-label" for="App_entity_vol_lieuDepart">
										<input type="checkbox" class="form-check-input" id="App_entity_vol_lieuDepart" name="App_entity_vol[lieuDepart]" value="261">Aix Les Milles
									  </label>
									</div>
									<div class="form-check-inline">
									  <label class="form-check-label" for="App_entity_vol_lieuDepart">
										<input type="checkbox" class="form-check-input" id="App_entity_vol_lieuDepart" name="App_entity_vol[lieuDepart]" value="298">Berre-La Fare
									  </label>
									</div>
									<div class="form-check-inline">
									  <label class="form-check-label" for="App_entity_vol_lieuDepart">
										<input type="checkbox" class="form-check-input" id="App_entity_vol_lieuDepart" name="App_entity_vol[lieuDepart]" value="279">Avignon
									  </label>
									</div>

							</div>
						</div>	

 
				<div class="form-group" id="heureDepart">
					<div class="col-sm-12">
						<div><strong>{{ form_row(formVol.heureDepart, {'label' : 'Heure de Départ:', 'attr' : { 'class' : 'vol' }}) }}</strong></div>
					</div>
				</div>

						<div class="form-group" id="lieuArrivee">
							<div class="col-sm-12">
								<div><strong>{{ form_row(formVol.lieuArrivee, {'label' : 'Lieu d\'Arrivée:', 'attr' : { 'class' : 'vol' }}) }}</strong></div>
								

								<p class="text-danger">Formule Rapide. 1 seule case à cocher</p>
									 <div class="form-check-inline">
									  <label class="form-check-label" for="App_entity_vol_lieuArrivee">
										<input type="checkbox" class="form-check-input" id="App_entity_vol_lieuArrivee" name="App_entity_vol[lieuArrivee]" value="270">Marseille
									  </label>
									</div>
									<div class="form-check-inline">
									  <label class="form-check-label" for="App_entity_vol_lieuArrivee">
										<input type="checkbox" class="form-check-input" id="App_entity_vol_lieuArrivee" name="App_entity_vol[lieuArrivee]" value="261">Aix Les Milles
									  </label>
									</div>
									<div class="form-check-inline">
									  <label class="form-check-label" for="App_entity_vol_lieuArrivee">
										<input type="checkbox" class="form-check-input" id="App_entity_vol_lieuArrivee" name="App_entity_vol[lieuArrivee]" value="298">Berre-La Fare
									  </label>
									</div>
									<div class="form-check-inline">
									  <label class="form-check-label" for="App_entity_vol_lieuArrivee">
										<input type="checkbox" class="form-check-input" id="App_entity_vol_lieuArrivee" name="App_entity_vol[lieuArrivee]" value="279">Avignon
									  </label>
									</div>								
								
							</div>
						</div>

						<div class="form-group" id="heureArrivee">
							<div class="col-sm-12">
								<div><strong>{{ form_widget(formVol.heureArrivee, { 'attr' : { 'class' : 'vol' }}) }}</strong></div>
							</div>
						</div>				

				</div>

			</div>
		{#</div>#}
	</div>



{{ form_widget(formVol.valider, {'attr': {'class': 'btn btn-success'}})}}

	<a button class="btn btn-danger" role="button" aria-pressed="true" href="{{ path('app_MesDossiers') }}">Annuler</a>



