{% extends 'layout.html.twig' %}
{% block body %}
{% block stylesheets %}
    {#{{ encore_entry_link_tags('app') }}#}
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link href="{{ asset('css/layout.css') }}" rel='stylesheet' />	
{% endblock %}
	 	{% include "_partials/_entete.html.twig" %}
<header>
<div class="container">		
		<div class="row">							
			<div class="col-6">
				<h3>Liste des Vols</h3>
			</div>
		</div>

		<div class="row ">
			<div class="col-md-12">
				<table class="table table-striped table table-bordered table table-hover ">
					<thead>
						<tr class="table-primary">
						  <th>Pilote</th>						
						  <th>Date</th>
						  <th>Avion</th>
						  <th>Vol</th>						  
						  <th>Instructeur</th>
						  <th>Nature</th>						  
						  <th>Durée</th>

						  <th>Tarif</th>					  
						  <th>Débit €uros</th>
						</tr>
					</thead>					  
						<tbody>							
							{% for vol in vols %}
							<tr class="active">					   
								<td style="font-weight: bold;color:#446e9b;">{{ vol.user}}</td>
								<td style="font-weight: bold;color:#446e9b;">{{ vol.datevol|date('d/m/Y') }}</td>									   
								<td style="font-weight: bold;color:#446e9b;">{{ vol.avion }}</td>
								<td style="font-weight: bold;color:#446e9b;">{{ vol.typevol }}</td>
								<td style="font-weight: bold;color:#446e9b;">{{ vol.instructeur }}</td>
								<td style="font-weight: bold;color:#446e9b;">{{ vol.naturevol}}</td>									   
								<td style="font-weight: bold;color:#446e9b;">{{ vol.dureeduvol | date('H:i') }}</td>

								<td style="font-weight: bold;color:#446e9b;">{{ vol.tarifapplicable | number_format(2, '.', ',') }}</td>
								<td style="font-weight: bold;color:#446e9b;">{{ vol.montantfacture | number_format(2, '.', ',') }}</td>
							</tr>
							{% endfor %}
						</tbody>									
				</table>
				<div class="pagination justify-content-center" style="margin:20px 0">
					{{ knp_pagination_render(vols,'@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig',) }} 
				</div>
			</div>			
		
			<div>
			<a href="{{ path('app_MesVols_detail') }}" class="btn btn-outline-primary" role="button" aria-pressed="true">Détail des Vols</a>
			<a href="{{ path('app_MesDossiers') }}" class="btn btn-outline-primary" role="button" aria-pressed="true" >Retour à : Mes Dossiers</a>
			<a href="{{ path('app_PDFlistVols') }}" class="btn btn-outline-danger" role="button" aria-pressed="true"><i class="fa fa-file-pdf-o" aria-hidden="true"></i>  Télécharger</a>			
			</div>
		</div>
</div>
<header>
{% endblock body %}